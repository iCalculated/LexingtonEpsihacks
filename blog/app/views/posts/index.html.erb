<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<% @posts.each do |post| %>
  <div class="post row clearfix">
    <div class="btn-group">
      <%= button_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
      <% end %>
      <span> <%= post.get_upvotes.size - post.get_downvotes.size %></span>
      <%= button_to dislike_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-down"></span>
      <% end %>
    </div>
    <h2>
      <div class="post-title">
      <%= link_to post.title, post %><br>
      </div>
      <small class="author">Submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.email %></small>
    </h2>

  </div>
  <br>
<% end %>

