<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<% @posts.each do |post| %>
  <div class="post row clearfix">
    <div class="btn-group">
      <% if user_signed_in? %>
        <% if current_user.voted_up_on? post %>
          <%= button_to unvote_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
            <span class="fa fa-chevron-circle-up"></span>
          <% end %>
        <% else %>
          <%= button_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
            <span class="fa fa-chevron-up"></span>
          <% end %>
        <% end %>
        <div class = "score">
          <b><span style="font-size: 20px"> <%= post.weighted_score %></span></b>
        </div>
        <% if current_user.voted_down_on? post %>
          <%= button_to unvote_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
            <span class="fa fa-chevron-circle-down"></span>
          <% end %>
        <% else %>
          <%= button_to dislike_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
            <span class="fa fa-chevron-down"></span>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <h2>
      <div class="post-title">
      <%= link_to post.title, post %><br>
      </div>
      <small class="author">Submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.username %></small>
    </h2>
  </div>
  <hr>
<% end %>




