<div class="post-show">
  <div class="title">
    <h3 style="margin-bottom: 0px">
      <%= @post.title %>
    </h3>
  </div>
  <div class="btn-group">
    <% if user_signed_in? %>
      <% if current_user.voted_up_on? @post %>
        <%= button_to unvote_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
          <span class="fa fa-chevron-circle-up"></span>
        <% end %>
        <% else %>
        <%= button_to like_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
          <span class="fa fa-chevron-up"></span>
        <% end %>
        <% end %>
      <div class = "score">
        <b><span style="font-size: 20px"> <%= @post.weighted_score %></span></b>
      </div>
      <% if current_user.voted_down_on? @post %>
      <%= button_to unvote_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="fa fa-chevron-circle-down"></span>
      <% end %>
        <% else %>
        <%= button_to dislike_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
          <span class="fa fa-chevron-down"></span>
        <% end %>
        <% end %>
    <% end %>
  </div>
  <div class="user">
    Submitted by <%= link_to @post.user.username, user_path(@post.user), class: 'username' %>
  </div>
  <div class="content">
    <%= render partial: "description", locals: {post: @post} %>
  </div>
  <div class="delete">
    <% if user_signed_in? %>
      <% if current_user.posts.exists?(@post.id) %>
        <%= button_to 'Remove', post_path(@post),
                      method: :delete,
                      confirm: 'Are you sure?' %>
      <% end %>
    <% end %>
  </div>
  <%= commontator_thread(@post) %>
</div>
