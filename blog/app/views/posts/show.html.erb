<div class="post-show">
  <div class="title">
    <h3 style="margin-bottom: 0px">
      <%= @post.title %>
    </h3>
  </div>
  <div class="btn-group">
    <%= button_to like_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-up"></span>
    <% end %>
    <div class = "score">
      <b><span style="font-size: 20px"> <%= @post.get_upvotes.size - @post.get_downvotes.size %></span></b>
    </div>
    <%= button_to dislike_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
      <span class="glyphicon glyphicon-chevron-down"></span>
    <% end %>
  </div>
  <div class="user">
    Submitted by <%= link_to @post.user.username, user_path(@post.user), class: 'username' %>
  </div>
  <div class="content">
    <%= render partial: "description", locals: {post: @post} %>
  </div>
  <div class="delete">
    <% if user_signed_in? %>
      <% if current_user.posts.exists?(@post.id) %>
        <%= button_to 'Remove', post_path(@post),
                      method: :delete,
                      confirm: 'Are you sure?' %>
      <% end %>
    <% end %>
  </div>
  <%= commontator_thread(@post) %>
</div>
