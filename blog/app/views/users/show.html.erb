
<div class="user-profile"> 
  <div class="profile row"> 
    <div class="col-md-4 avatar"> 
      <div class="wrapper"> 
        <img src="https://i.imgur.com/U21NITC.jpg">
      </div> 
    </div> 

    <div class="col-md-8 basic-info"> 
      <div class="user-wrapper"> 
        <h2 class="username"><%= @user.username %></h2> 
        <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
          <button>Edit Profile</button>
        </a>
      </div> 
      <ul class="posts"> 
        <li><span>12</span> posts</li> 
        <li><span>195</span> laws written</li> 
        <li><span>345</span> laws read</li> 
      </ul> 
      <h2 class="name"><%= @user.name %></h2> 
      <a class="website"><%=@user.website%></a> 
      <%=@user.bio%>
    </div> 
    <div class="user-posts">
      <% @posts.each do |post|%> 
        <div class="wrapper"> 
          <%=link_to post_path(post) do %> 
            <%= post.title %> 
          <% end %> 
        </div> 
      <% end %>
    </div>
  </div> 
</div>
